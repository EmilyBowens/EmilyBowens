<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab04.MainActivity">


    <TextView
        android:text="Counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/onOffSwitch"
        android:layout_marginTop="19dp"
        android:id="@+id/textView3"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:text="FREQUENCY VALUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/counter"
        android:layout_alignStart="@+id/counter"
        android:id="@+id/fcounter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNTER VALUE"
        android:id="@+id/counter"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="52dp"
        android:layout_alignBottom="@+id/onOffSwitch"
        android:layout_toEndOf="@+id/onOffSwitch" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/slider1"
        android:max="500"
        android:layout_below="@+id/fcounter"
        android:layout_alignEnd="@+id/fcounter"
        android:layout_alignStart="@+id/onOffSwitch" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/switch2"
        android:layout_below="@+id/slider1"
        android:layout_toStartOf="@+id/counter" />

    <TextView
        android:text="Yiruma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider1"
        android:layout_alignStart="@+id/switch2"
        android:layout_marginTop="17dp"
        android:id="@+id/textView2" />

    <Switch
        android:text="On/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/onOffSwitch"
        android:layout_marginStart="22dp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
